<div class="page-header">
  <h1><%= @user.full_name %></h1>
  <%= link_to "Add Friend", new_user_friendship_path(friend_id: @user), class: "article-btn" %>
</div>

<% if @statuses %>
  <% @statuses.each do |status| %>
    <div class="well">
      <%= status.content %>
      <hr>
      <%=link_to status.created_at.to_time.strftime('%B %e at %l:%M %p'), status_path(status)%>
    </div>
  <% end -%>
<% end -%>